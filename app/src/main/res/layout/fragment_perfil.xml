<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:background="@color/colorDarkBlue">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".SignUp"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/vperfil2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="@string/perfil"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">


                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/codCliente"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/codigo_de_la_pupuseria"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/cNombre"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="Nombre cliente"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/codUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/pupuseria"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/cDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/direccion"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/cCelular"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/telefono"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/cEmail"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="Email"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnEditar"
                        android:layout_width="300dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@android:color/primary_text_light"
                        android:text="@string/editar"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </ScrollView>



